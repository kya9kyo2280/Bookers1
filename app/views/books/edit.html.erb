<h1>Editing Book</h1>
<%= form_for @book,url: update_book_path(@book) do |f| %>
    <h4> Title</h4>
    <%= f.text_field :title %>
    <h4> Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>

    <span>
	<%=link_to "Show" ,post_path %>
    </span>
    <span>
	<%=link_to "Back" ,books_path %>
    </span>


<% end %>